{
  "version": 2,
  "builds": [
    {
      "src": "backend/flask_app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/flask_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "SECRET_KEY": "your-production-secret-key"
  }
}